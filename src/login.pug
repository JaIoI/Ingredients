extends pug/base

prepend vars
	//-
	- title = "Ingredients | Вход"

append vars
	//-

block content
	include pug/components/header
	main
		section.section.section_lines.section_login
			.lines
				img(src="images/lines.svg" alt="lines.svg")
			.container
				.section__title Вход
				.section__subtitle Добро пожаловать на MIT.   Портал по продаже сырья, материалов и оборудования. Все для разработки и внедрения новых продуктов  в одном  месте.
				form.form.form_login.form_validation
					label.form__item
						span.form__icon
							include pug/svg/email.svg
						input.input.required(type="email")
						span.placeholder E-mail

					label.form__item
						span.form__icon
							include pug/svg/lock.svg
						input.input.required(type="password")
						span.placeholder Пароль

					.form__bottom
						button.btn(type="submit") Войти
						.form__link
							span Еще не зарегистрировались?
							a(href="./registration.html")
								| /
								span.underline регистрация

	include pug/components/footer